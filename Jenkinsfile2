pipeline {
    agent any

    stages {

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm install --save-dev jest-junit

                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('Test'){
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            
            steps{
                sh '''
                test -f build/index.html
                npm test
                '''


            }



        }

   }
   post{
    always{
       // junit 'C:\Users\Acer\Documents\Learn_Jenkins_Vdespa\test-results\junit.xml'
         junit 'test-results/junit.xml'
    }
   }
        
}                  


