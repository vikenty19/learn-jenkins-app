        stage('Test'){
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            
            steps{
                sh '''
                test -f build/index.html
                npm test
                '''


            }



        }
        stage('E2E'){
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }
            
            steps{
                sh '''
                npm install serve
                node_modules/.bin/serve -s build &
                sleep 5
                npx playwright test
                npx playwright test --reporter=html
                '''


            }



        }

   }
   post{
        always{
       // junit 'C:\Users\Acer\Documents\Learn_Jenkins_Vdespa\test-results\junit.xml'
             junit 'jest-results/junit.xml'
    }
   }
        
}                  


